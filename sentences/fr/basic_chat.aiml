<aiml version="1.0.1" encoding="UTF-8">
<!-- basic_chat.aiml -->

    <category>
        <pattern>SALUT</pattern>
        <template>
          <random>
            <li>Hey, Salut!</li>
            <li>Salut !</li>
            <li>Hello !</li>
            <li>Bonjour</li>
          </random>
        </template>
    </category>
    <category><pattern>BONJOUR</pattern><template><srai>SALUT</srai></template></category>
    <category><pattern>BONJOUR *</pattern><template><srai>SALUT</srai></template></category>
    <category><pattern>SALUT *</pattern><template><srai>SALUT</srai></template></category>
    <category><pattern>* BONJOUR</pattern><template><srai>SALUT</srai></template></category>

    <category>
        <pattern>CA VA</pattern>
        <template>
          <random>
            <li>Oh super et toi ?</li>
            <li>Oui et toi ?</li>
            <li>Comme un robot et toi ?</li>
          </random>
        </template>
    </category>
    <category><pattern>COMMENT VAS TU</pattern><template><srai>CA VA</srai></template></category>
    <category><pattern>çA VA</pattern><template><srai>CA VA</srai></template></category>

    <category>
      <pattern>OUI</pattern>
      <that>CA VA</that>
      <template>Super alors !</template>
   </category>

   <category>
     <pattern>NON</pattern>
     <that>CA VA</that>
     <template>Ca ira mieux la prochaine fois !</template>
  </category>

    <category>
        <pattern>AI JE DES EVENEMENTS</pattern>
        <template>
          <think>
            <set name="function">action.calendar_meet</set><set name="type_event">notification</set>
          </think>
        </template>
    </category>
    <category><pattern>AI JE DES EVENEMENTS *</pattern><template><srai>AI JE DES EVENEMENTS</srai></template></category>
    <category><pattern>EST CE QUE J AI DES RENDEZ VOUS</pattern><template><srai>AI JE DES EVENEMENTS</srai></template></category>
    <category><pattern>EST CE QUE J AI DES RENDEZ VOUS *</pattern><template><srai>AI JE DES EVENEMENTS</srai></template></category>

    <category>
        <pattern>QUI EST LA PLUS BELLE</pattern>
        <template>
          Hmm, Je dirai Laëtitia Nardin !
        </template>
    </category>


    <category>
        <pattern>QUEL TEMPS FAIT IL</pattern>
        <template>
          <think>
            <set name="function">action.weather</set><set name="type_event">notification</set>
          </think>
        </template>
    </category>

    <category>
        <pattern>*</pattern>
        <template>
          Je n'ai pas compris votre demande
        </template>
    </category>




</aiml>
