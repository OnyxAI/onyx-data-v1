<aiml version="1.0.1" encoding="UTF-8">
<!-- basic_chat.aiml -->

    <category>
        <pattern>SALUT</pattern>
        <template>
            Hey, Salut!
        </template>
    </category>


    <category>
        <pattern>ALLUME LA LUMIERE *</pattern>
        <template>
          <think>
            <set name="function">mi_light.voice_open</set><set name="type_event">exec</set><set name="param"><star/></set>
          </think>
          Ouverture de la lampe
        </template>
    </category>

    <category>
        <pattern>FERME LA LUMIERE *</pattern>
        <template>
          <think>
            <set name="function">mi_light.voice_close</set><set name="type_event">exec</set><set name="param"><star/></set>
          </think>
          Ouverture de la lampe
        </template>
    </category>


</aiml>
